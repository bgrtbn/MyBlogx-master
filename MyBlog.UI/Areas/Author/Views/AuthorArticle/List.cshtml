
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Author/Views/Shared/_AuthorLayoutPage.cshtml";
}

@model List<MyBlog.DAL.ORM.Entity.Article>
<link href="~/Content/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/scripts/jquery.dataTables.min.js"></script>
<script src="~/Content/scripts/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminIndex"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Admin/Article/Add">Add Article</a></li>
        <li><a href="/Admin/Article/List">List of Article</a></li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Article of Categories</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Header</th>
                                <th>SubTitle</th>
                                <th>Content</th>
                                <th>Category Name</th>
                                <th>User Name</th>
                                <th>Publish Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Header</td>
                                <td>@item.SubTitle</td>
                                <td>@item.Content</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.AppUser.UserName</td>
                                <td>@item.PublishDate</td>
                                <td><a href="/Author/AuthorArticle/Update/@item.ID" type="button" class="btn btn-block btn-primary">Update</a></td>
                                <td><a href="/Author/AuthorArticle/Delete/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                                @*@if (Convert.ToUInt32(item.article.AppUserID) == Convert.ToUInt32(Session["ID"]))
                                {


                                }*@

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>$(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })</script>

