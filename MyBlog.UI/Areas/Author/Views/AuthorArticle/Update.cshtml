
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayoutPage.cshtml";
}

@model MyBlog.UI.Areas.Author.Models.VM.ArticleVM
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Article/">Forms</a></li>
        <li class="active">Add Article</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Article</h3>
                </div>
                <form action="/Admin/Article/Update" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="Header">Header</label>
                            <input type="text" name="Header" value="@Model.article.Header" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="SubTitle">SubTitle</label>
                            <input type="text" name="SubTitle" value="@Model.article.SubTitle" class="form-control" placeholder="SubTitle">
                        </div>
                        <div class="form-group">
                            <label for="Content">Content</label>
                            <input type="text" name="Content" value="@Model.article.Content" class="form-control" placeholder="Content">
                        </div>
                        <div class="form-group">
                            <label for="PublishDate">PublishDate</label>
                            <input type="date" name="PublishDate" value="@Model.article.PublishDate" class="form-control" placeholder="PublishDate">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">CategoryName</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                        

                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.article.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

